<h1>Burgers!</h1>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each cats}}
    {{#unless this.sleepy}}
      <li>
        {{this.name}}

        <form action="cats/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">EAT ME!</button>
        </form>
       
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Make
!</h2>

<ul>
  {{#each cats}}
    {{#if this.sleepy}}
      <li>
        {{this.name}}

        <form action="cats/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">GIT BURGER CREATE!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger!</h2>
<form class="create-update-form" action="cats/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Type of Burger</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
  <button type="submit">WAKE UP!</button>
</form>
